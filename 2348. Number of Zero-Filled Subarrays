class Solution {
    public long zeroFilledSubarray(int[] nums) {
        long ans = 0;
        int n = nums.length;
        int i = 0;

        while (i < n) {
            if (nums[i] != 0) { 
                i++;
                continue;
            }
            int j = i;
            while (j < n && nums[j] == 0) j++;     // [i, j) is one zero-run
            long len = j - i;
            ans += len * (len + 1L) / 2;           // sum of 1..len
            i = j;                                 // skip to next segment
        }
        return ans;
    }
}
