class Solution {
    public int areaOfMaxDiagonal(int[][] dimensions) {
        int maxarea=0;
        int maxdiagonalsq=0;
        for(int[] react:dimensions){
           int a=react[0];
           int b=react[1];
           int area=a*b;
           int diagonalsq=a*a+b*b;
           if(diagonalsq>maxdiagonalsq){
            maxdiagonalsq=diagonalsq;
            maxarea=area;
           }
           else if(diagonalsq==maxdiagonalsq){
            maxarea=Math.max(area,maxarea);
           }
        }
        return maxarea;
    }
}
